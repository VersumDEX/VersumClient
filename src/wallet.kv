#: include dropdowndeposit.kv
#: include dropdownwithdraw.kv
#: include dropdownmenu.kv

<Wallet>:
    history:history
    
    vbtc_balance: vbtc_balance
    vltc_balance: vltc_balance
    veth_balance: veth_balance

    vbtc_amount: vbtc_amount
    vltc_amount: vltc_amount
    veth_amount: veth_amount
    RelativeLayout:
        Image:
            source: "gui/versumwallet/Client-user-background.png"
            size_hint: 1,1
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "Withdraw"
            size_hint: 0.2, 0.05
            color: 0,0,0,1
            pos_hint: {"x":0.015, "y":0.925}
            on_release: root.dropdownw.open(self)
            background_normal: "gui/versumwallet/1button-MO.png"
        Button:
            text: "Deposit"
            size_hint: 0.2, 0.05
            color: 0,0,0,1
            pos_hint: {"x":0.23, "y":0.925}
            on_release: root.dropdownd.open(self)
            background_normal: "gui/versumwallet/1button-MO.png"
        Button:
            text: "Advanced"
            size_hint: 0.2, 0.05
            color: 0,0,0,1
            pos_hint: {"x":0.445, "y":0.925}
            on_release: root.dropdownm.open(self)
            background_normal: "gui/versumwallet/1button-MO.png"
##########################################################################################
        TextInput:
            id: vbtc_amount
            index: 0
            background_normal: "gui/versumwallet/btc-leiste.png"
            background_active: "gui/versumwallet/btc-leiste-MO.png"
            size_hint: 0.6, 0.075
            pos_hint: {"x":0.01, "y":0.7}
            font_size: root.width/37
            input_filter: "float"
            multiline: "false"
            padding_x: self.width/2, 0
        Label:
            id: vbtc_balance
            index: 1
            text: "0.0"
            size_hint: 0.15, 0.05
            pos_hint: {"x":0.1, "y":0.71}
            color: 0,0,0,1
            font_size: root.width/37

        TextInput:
            id: vltc_amount
            index: 0
            background_normal: "gui/versumwallet/ltc-leiste.png"
            background_active: "gui/versumwallet/ltc-leiste-MO.png"
            size_hint: 0.6, 0.075
            pos_hint: {"x":0.01, "y":0.6}
            font_size: root.width/37
            input_filter: "float"
            multiline: "false"
            padding_x: self.width/2, 0
        Label:
            id: vltc_balance
            index: 1
            text: "0.0"
            size_hint: 0.15, 0.05
            pos_hint: {"x":0.1, "y":0.61}
            color: 0,0,0,1
            font_size: root.width/37

        TextInput:
            id: veth_amount
            index: 0
            background_normal: "gui/versumwallet/eth-leiste.png"
            background_active: "gui/versumwallet/eth-leiste-MO.png"
            size_hint: 0.6, 0.075
            pos_hint: {"x":0.01, "y":0.5}
            font_size: root.width/37
            input_filter: "float"
            multiline: "false"
            padding_x: self.width/2, 0
        Label:
            id: veth_balance
            index: 1
            text: "0.0"
            size_hint: 0.15, 0.05
            pos_hint: {"x":0.1, "y":0.51}
            color: 0,0,0,1
            font_size: root.width/37
##########################################################################################
        Button:
            text: "Send"
            size_hint: 0.25, 0.1
            color: 0,0,0,1
            pos_hint: {"x":0.02, "y":0.25}
            on_release: root.vsend()
            background_normal: "gui/versumwallet/button-MO.png"
            background_down: "gui/versumwallet/2button-MO.png"
        Button:
            text: "Receive"
            size_hint: 0.25, 0.1
            color: 0,0,0,1
            pos_hint: {"x":0.35, "y":0.25}
            on_release: root.receive()
            background_normal: "gui/versumwallet/button-MO.png"
            background_down: "gui/versumwallet/2button-MO.png"
##########################################################################################
        ScrollView:
            size_hint: 0.34,0.75
            pos_hint: {"x":0.65, "y":0.075}
            GridLayout:
                id: history
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height  
                row_default_height: 100
                cols:1
                spacing_vertical: 10
                


            
            
